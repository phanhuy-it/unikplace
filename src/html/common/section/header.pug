-
    let mobileNavigation = [
        {
            title: 'Home',
            icon: 'ri-home-3-line',
            href: 'index.html'
        },
        {
            title: 'Gallery',
            icon: 'ri-layout-line',
            href: 'gallery.html'
        },
        {
            title: 'Your Place',
            icon: 'ri-palette-line',
            href: 'design-book.html'
        }
    ]

.mobile-navigation
    ul
        each item, index in mobileNavigation
            - let active = index == 0 ? 'active' : ''
            li(class=active)
                a(href=item.href)
                    i.icon(class=item.icon)
                    span= item.title
        li.dropdown.user-box
            a(href="#" data-toggle="dropdown")
                i.icon(class="ri-user-3-fill")
                span= "Profile"
            .dropdown-menu.dropdown-menu-right
                a(href="profile.html").dropdown-item Profile
                each item, index in ['Log Out']
                    a(href="index_2.html").dropdown-item= item
                    - if (index === 1)
                        .dropdown-divider