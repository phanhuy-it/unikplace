//- Comment Message
mixin comment-message(avatar, name, mess, reply, active)
	-
		let activeClass = active ? 'active' : ''
		let replyClass = reply ? 'reply' : ''
	.item(class=replyClass)
		.user-box
			.avatar-img
				img(src=avatar)/
			.username=name
		.comment-content.flex-wrap
			.w-100.d-flex.flex-wrap
				.message-box(class=activeClass)=mess
				a(href="#").reply-link
					i.ri-reply-fill
					| Reply

