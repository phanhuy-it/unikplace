mixin tag-popup-desktop(right, top, customStyle)
	.tag-popup(style=`right: ${right}; top: ${top};`)
		i.icon.ri-price-tag-3-fill
		.tag-popup-info.tag-sm.align-right(style=`position: absolute; right: calc(100% + 11px); ${customStyle}`)
			.d-flex.align-items-center.mb-3
				.thumbnail(style="width: 40px")
					img.thumbnail(src="assets/images/product-tag/product-1.jpg")
				.product-specs.mb-0.ml-2
					.title Unikplace Luxury Lamp
			each item, index in ['IFoss Inc', 'Odds And Ends', 'Handy Help', 'Knick Knacks', 'Trusted Assortment']
