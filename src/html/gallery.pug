block script
	script.
		if(window.innerWidth >= 992) {
			document.querySelectorAll('.section-home-gallery .gallery-grid--1-row > div:not(.d-lg-none) .item .item-thumbnail a[data-action="popup-zoom-in"]').forEach((el, i)=> el.setAttribute('data-img-index', i));
			document.querySelectorAll('.section-home-gallery .gallery-grid--1-row > div:not(.d-lg-none) .item > .item-content-overlay a[data-action="popup-zoom-in"]').forEach((el, i)=> el.setAttribute('data-img-index', i));
		} else {
			document.querySelectorAll('.section-home-gallery .gallery-grid--1-row > div:not(.d-lg-block) .item .item-thumbnail a[data-action="popup-zoom-in"]').forEach((el, i)=> el.setAttribute('data-img-index', i));
			document.querySelectorAll('.section-home-gallery .gallery-grid--1-row > div:not(.d-lg-block) .item > .item-content-overlay a[data-action="popup-zoom-in"]').forEach((el, i)=> el.setAttribute('data-img-index', i));
		}

		let imageData = [!{imageData}];
		let sectionBanner = $('.section-banner'),
			sectionBannerImg = sectionBanner.find('.banner-img img');

		
		document.addEventListener('DOMContentLoaded', (event)=> {
			theme.photoswipeInit('.section-home-gallery', '.item .item-thumbnail a[data-action="popup-zoom-in"]', imageData);
			theme.photoswipeInit('.section-home-gallery', '.item > .item-content-overlay a[data-action="popup-zoom-in"]', imageData);

			if (window.innerWidth > 991 && window.innerHeight > 768){
				sectionBannerImg.height(window.innerHeight);
			}

			if (window.innerWidth <= 768){
				sectionBannerImg.height(window.innerHeight - mobileNav.outerHeight(true));
			}

			$('.section-home-gallery .item').hover(function() {

			}, function() {
				if($(this).find('.dropdown-menu').hasClass('show')) {
					$(this).find('.dropdown-menu.show').removeClass('show');
				}
			});
		});