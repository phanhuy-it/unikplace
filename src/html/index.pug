	title #{pageName} | #{projectName}

block content
	.section.section-banner
		.banner-img
			img(src="assets/images/banner/banner.jpg")/
		.banner-container.container
			.text-center
				.banner-title The largest 3D design library for beauty industry
				p.text-white Can't find a idea for your salon? No problem, we have 1000+ ideas for you
		a(href=".section-home-gallery" data-offset-top="48").chevron-btn.scroll-to-element
			img(src="assets/images/icons/chevron-bottom.svg")/

	.section.section-home-gallery
		.container
			.section-heading
				div
					.section-decor-title Great Ideas
					.section-title Here are some ideas we pick for you
				.section-bg
					img(src="assets/images/logo/logo-shape.png")/
		
		.gallery-grid--1
			.container-fluid
				.row.gallery-grid--1-row

					//- PC + SP
					.col-6.col-lg-4
						.item.vertical-item
							+gallery-content-overlay('assets/images/gallery/gallery-v-1.jpg', 'assets/images/gallery/gallery-v-1.jpg')
								
					//- PC
					.col-lg-8.d-none.d-lg-block
						.sub-item
							.row
								- for (var j = 1; j < 5; j++)
									.col-lg-6.col-6
										.item
											+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)
					
					//- SP
					.col-6.d-lg-none
						.sub-item
							.row
								- for (var j = 1; j < 3; j++)
									.col-12
										.item
											+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)

					//- SP
					.col-12.d-lg-none
						.sub-item
							.row
								- for (var j = 3; j < 5; j++)
									.col-6
										.item
											+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)



					//- PC
					.col-lg-8.d-none.d-lg-block
						.sub-item
							.row
								- for (var j = 5; j < 9; j++)
									.col-lg-6.col-6
										.item
											+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)

					//- SP
					.col-6.d-lg-none
						.sub-item
							.row
								- for (var j = 5; j < 7; j++)
									.col-12
										.item
											+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)

					//- PC + SP
					.col-6.col-lg-4
						.item.vertical-item
							+gallery-content-overlay('assets/images/gallery/gallery-v-2.jpg', 'assets/images/gallery/gallery-v-2.jpg')

					//- PC
					.col-12.d-lg-none
						.sub-item
							.row
								- for (var j = 7; j < 9; j++)
									.col-6
										.item
											+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)

					.col-lg-12.px-0.blur-content
						.row.mx-0
							- for (var j = 1; j <= 3; j++)
								- var hide = j > 1 ? 'd-lg-none-i' : ''
								.col-lg-4
									.item(class=hide)
										+gallery-content-overlay(`assets/images/gallery/gallery-h-${j}.jpg`, `assets/images/gallery/gallery-h-${j}.jpg`)
						.content
							div
								.title Visit our gallery to see more
								.clearfix.w-100
									//- a.btn.btn-brand(href="javascript:void(0)" data-toggle="modal" data-target="#loginPopup").mr-3 Sign In
									a.btn.btn-brand(href="./gallery.html") View more

